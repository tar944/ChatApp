<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Utility.MLRoundedImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/iv_ch_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/tstimg"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Groups"
        android:id="@+id/tv_ch_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_ch_img"
        android:layout_toEndOf="@+id/iv_ch_img"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="nice projects"
        android:id="@+id/tv_ch_msg"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_ch_img"
        android:layout_toEndOf="@+id/iv_ch_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="9:31"
        android:id="@+id/tv_ch_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10"
        android:id="@+id/tv_ch_num"
        android:background="@drawable/round_rectangle_green"
        android:padding="7dp"
        android:visibility="visible"
        android:layout_below="@+id/tv_ch_time"
        android:layout_alignRight="@+id/tv_ch_time"
        android:layout_alignEnd="@+id/tv_ch_time"
        android:layout_marginTop="10dp"
        android:textColor="@color/txt_white" />
</RelativeLayout>