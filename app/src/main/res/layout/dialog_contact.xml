<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="450dp"
    android:background="@color/colorPrimary"
    android:paddingBottom="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout9"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_dlg_net_close"
            android:layout_margin="5dp"
            android:src="@drawable/exit"
            android:padding="7dp" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_contacts"
        android:layout_below="@+id/textView"
        android:layout_above="@+id/btn_ok_tags"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/selected"
        android:id="@+id/btn_ok_tags"
        android:background="@drawable/round_rectangle_green"
        android:textColor="@color/txt_white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/chose_tags"
        android:id="@+id/textView"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/txt_blue" />

</RelativeLayout>