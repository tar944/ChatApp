<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_cell_send"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baloon"
            android:id="@+id/rl_send_content"
            android:paddingBottom="15dp"
            android:layout_marginRight="65dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_s_mms"
                android:layout_toRightOf="@+id/iv_camera"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/iv_s_img"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_s_img_name"
                    android:layout_alignTop="@+id/iv_s_img"
                    android:layout_toRightOf="@+id/iv_s_img"
                    android:layout_toEndOf="@+id/iv_s_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/tv_s_img_size"
                    android:layout_below="@+id/tv_s_img_name"
                    android:layout_alignLeft="@+id/tv_s_img_name"
                    android:layout_alignStart="@+id/tv_s_img_name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/rl_s_sms"
                android:visibility="visible"
                android:layout_marginRight="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/tv_cell_send_time"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_cell_send_msg"
                    android:layout_below="@+id/tv_cell_send_time"
                    android:layout_alignLeft="@+id/tv_cell_send_time"
                    android:layout_alignStart="@+id/tv_cell_send_time"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

        </RelativeLayout>

        <Utility.MLRoundedImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iv_send_img"
            android:src="@drawable/women"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="18dp"
            android:layout_alignBottom="@+id/rl_send_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_mch_state"
            android:layout_below="@+id/rl_send_content"
            android:layout_alignRight="@+id/rl_send_content"
            android:layout_alignEnd="@+id/rl_send_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_cell_recive"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@drawable/baloon1"
            android:id="@+id/rl_recive_content"
            android:paddingBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_r_mms"
                android:layout_toRightOf="@+id/iv_camera"
                android:visibility="visible"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:id="@+id/iv_r_img"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_r_img_name"
                    android:layout_alignTop="@+id/iv_r_img"
                    android:layout_toRightOf="@+id/iv_r_img"
                    android:layout_toEndOf="@+id/iv_r_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/tv_r_img_size"
                    android:layout_below="@+id/tv_r_img_name"
                    android:layout_alignLeft="@+id/tv_r_img_name"
                    android:layout_alignStart="@+id/tv_r_img_name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/rl_r_sms"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/tv_cell_recive_time"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_cell_recive_msg"
                    android:layout_below="@+id/tv_cell_recive_time"
                    android:layout_alignLeft="@+id/tv_cell_recive_time"
                    android:layout_alignStart="@+id/tv_cell_recive_time"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

        </RelativeLayout>

        <Utility.MLRoundedImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iv_recive_img"
            android:src="@drawable/men"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/rl_recive_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="21dp" />

    </RelativeLayout>

</RelativeLayout>